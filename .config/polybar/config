[colors]
background = ${xrdb:background:#222}
background-alt = ${xrdb:color8}
foreground = ${xrdb:foreground:#222}
foreground-alt = ${xrdb:color14}
primary = ${xrdb:color3}
secondary = ${xrdb:color6}
alert = #bd2c40

[bar/top]
;monitor = ${env:MONITOR:HDMI-1}
monitor = ${env:MONITOR}
dpi = 133
include-file = ~/.config/polybar/top-bar
modules-left = hostname ip xwindow
modules-center = date
modules-right = uptime memory powermenu

[bar/top-second]
monitor = ${env:MONITOR}
dpi = 133
include-file = ~/.config/polybar/top-second-bar
modules-left = rldDns rldTor volume
modules-center = mpd
modules-right = netstat wlan eth

[module/uptime]
type = custom/script
exec = uptime|awk '{print $2 " " $3 " " $4 " " $5 " " $6}'|cut -d ',' -f -2
interval = 6
format-prefix = " "
format-prefix-foreground = ${colors.primary}
format-foreground = ${colors.foreground}
format-padding = 1

[module/netstat]
type = internal/network
interface = enp3s0
interval = 3.0
label-connected = %{F#ff0000} %{F-}%upspeed% %{F#00ff00} %{F-}%downspeed%

[module/rldTor]
type = custom/text
content = "reload tor "
content-suffix = ^
content-suffix-foreground = #ffffff
content-foreground = ${colors.primary}
content-padding = 0
; need into /etc/sudoers line bellow to work
; username ALL=(ALL) NOPASSWD: /usr/bin/systemctl restart tor
click-left = "sudo systemctl restart tor"

[module/rldDns]
type = custom/text
content = "reload dnscrypt "
content-suffix = ^
content-suffix-foreground = #ffffff
content-foreground = ${colors.secondary}
content-padding = 0
; need into /etc/sudoers line bellow to work
; username ALL=(ALL) NOPASSWD: /usr/bin/systemctl restart dnscrypt-proxy
click-left = "sudo systemctl restart dnscrypt-proxy"

[module/hostname]
type = custom/script
interval = 256
format = "<label> "
format-prefix = "  "
format-prefix-foreground = ${colors.secondary}
format-padding = 0
exec = echo "$(uname -n)"

[module/ip]
type = custom/script
interval = 2
format = "<label>"
format-prefix = "ip: "
format-prefix-foreground = ${colors.primary}
format-padding = 1
;exec = echo "$(wget -q -O - https://l2.io/ip | sed -e 's/[^[:digit:]\|.]//g')"
exec = curl --silent https://api.ipify.org
exec-if = ping -c 1 gentoo.org

[module/xwindow]
type = internal/xwindow
label = " %title:0:30:...%"
label-foreground = ${colors.foreground}

[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6600
;format-online =  <icon-prev> <toggle> <icon-next>
format-online = <label-song> <icon-prev> <toggle> <icon-next>
icon-prev = 
icon-play = 
icon-pause = 
icon-next =  

toggle-on-foreground = ${colors.primary}
toggle-off-foreground = ${colors.secondary}
label-offline = no sound

label-song =  %{F#88C0D0}%artist%%{F-}  %{F#EBCB8B}%title%%{F-}
label-song-maxlen = 200
label-song-ellipsis = true

[module/mail]
type = custom/script
; 600 = 10min
interval = 600
format = <label>
format-prefix = " "
format-padding = 1
format-prefix-foreground = ${colors.primary}
exec = ~/.config/polybar/mails

[module/memory]
type = internal/memory
interval = 2
format-prefix = "mem: "
format-prefix-foreground = ${colors.secondary}
label = %percentage_used%%
format-padding = 1

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0
format-connected = <label-connected>
format-connected-padding = 0
label-connected = %essid% - %{F#aca074}%signal%% %{F-}"
format-connected-prefix = "wlan0: "
format-connected-prefix-foreground = ${colors.secondary}
format-disconnected = "wlan: off"
format-disconnected-foreground = ${colors.primary}
format-disconnected-padding = 0
label-disconnected-foreground = ${colors.secondary}
ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.foreground-alt}

[module/eth]
type = internal/network
interface = enp3s0
interval = 3.0
format-connected = <label-connected>
format-connected-prefix = "eth: "
format-connected-prefix-foreground = ${colors.secondary}
label-connected = "on"
format-disconnected = "eth off"

[module/date]
type = internal/date
interval = 5
date = " %a %d %b"
date-alt = " %Y-%m-%d"
time = %l:%M %p
time-alt = %l:%M %p
label = %date% - %time%
format-prefix = "____["
format-prefix-foreground = #A3BE8C
format-suffix = " ]____"
format-suffix-foreground = #A3BE8C

[module/volume]
type = custom/script
interval = 2
format = "<label> "
;format-prefix = " "
format-prefix = "vol: "
format-padding = 0
format-prefix-foreground = ${colors.secondary}
exec = pamixer --get-volume | awk '{print $0"%"}'

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98
format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full-prefix = " "
format-full-prefix-foreground = ${colors.primary}
format-full-suffix = " "
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-foreground = ${colors.foreground-alt}
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-foreground = ${colors.foreground-alt}
animation-charging-framerate = 750

[module/powermenu]
type = custom/menu

expand-right = false

format-spacing = 1

label-open = "  "
label-open-foreground = ${colors.secondary}
label-close =  cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2
menu-0-2 = lock
menu-0-2-exec = menu-open-3

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = systemctl reboot

menu-2-0 = power off
menu-2-0-exec = systemctl poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

menu-3-0 = lock
menu-3-0-exec = i3lock -i ~/images/bgi3lock.png -e

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5
